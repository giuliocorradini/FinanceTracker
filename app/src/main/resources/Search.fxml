<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="financetracker.gui.SearchController">
<VBox spacing="5" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
    <children>
        <Label text="Search" />
        <TextField fx:id="searchField" />
        <CheckBox text="Use regex"/>
        <Pane VBox.vgrow="ALWAYS" />
        <HBox spacing="5">
            <children>
                <Button text="Previous" onAction="#highlightPrevious" />
                <Button text="Next" onAction="#highlightNext" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button text="Search" onAction="#handleSearch" />
            </children>
        </HBox>
    </children>
</VBox>
</AnchorPane>
